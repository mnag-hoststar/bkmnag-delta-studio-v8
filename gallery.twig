{% extends "layout.twig" %}

{% block content %}
<!-- Page Content Start -->
<section class="page page--default">
	
    <!-- Header -->
	<header class="template__header">
		<div class="template__header-bg">
			<div class="template__company">
				{{widget('companyname', 'companyname', {
					"business": "profile",
					"showTplWidget":"0"
				})|raw}}
			</div>
		</div>
		<div class="template__navigation">
			{{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}
		</div>
	</header>
	
    <!-- Zone Content Start -->
    <div class="template__content">
        <div class="container">
        {{zone('main')|raw}}
        {{widget('content', 'home-gallery-text', {
            content: '<p>If you love music, do what you love. Sing, dance, play, live your passion!</p>'
        })|raw}}
	
		{{widget('gallery', 'home-gallery', {
    		'showTitle': true,
    		'showDescription': true,
    		'images':[
    		{
				'url':asset('/images/gallery/1.jpg'),
				'title':'Relaxing spaces',
				'description': 'Visit our relaxation spaces to sit and
				read a book, drink a coffee or meditate.'
    		},
    		{
				'url':asset('/images/gallery/2.jpg'),
				'title':'Beautiful vistas',
				'description': 'Let go at our wonderful lakeside
				yoga point, where we hold courses all day.'
    		},
    		{
				'url':asset('/images/gallery/3.jpg'),
				'title':'Top notch facilities',
				'description': 'Enjoy our always stocked kitchen, calm meditation
				rooms, and soothing gardens.'
    		}
    	  ]
    	})|raw}}
        </div>
    </div>
    <!-- Zone Content End -->
	
</section>
<!-- Page Content End -->
{% endblock %}