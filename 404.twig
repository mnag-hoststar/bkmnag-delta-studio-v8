{% extends "layout.twig" %}

{% block content %}
<!-- Page Content Start -->
<section class="page page--404">
	
    <!-- Header -->
	<header class="template__header">
		<div class="template__company">
			{{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
			{{widget('companyname', 'companyname', {
				"business": "profile",
				"showTplWidget":"0"
			})|raw}}
		</div>
		<div class="template__navigation">
			{{widget('extendednavigation', 'extendednavigation', {"align":"right"})|raw}}
		</div>
	</header>

	<!-- Zone Content Start -->
    <div class="template__content">
        <div class="container">
            {{zone('main')|raw}}
        </div>
    </div>
	<!-- Zone Content End -->
	
</section>
<!-- Page Content End -->
{% endblock %}