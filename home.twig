{% extends "layout.twig" %}

{% block content %}
<!-- Page Content Start -->
<section class="page page--home">
	
	<!-- Header -->
	<header class="template__header">
		<div class="template__header-bg">
			<div class="template__company">
				{{widget('companyname', 'companyname', {
					"business": "profile",
					"showTplWidget":"0"
				})|raw}}
			</div>
		</div>
		<div class="template__navigation">
			{{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}
		</div>
	</header>
		
	<!-- Header Feature -->
	<div class="header-feature">
		{{widget('feature', 'featurehome', {
			"header": "Welcome", 
			"strapline": "Rejuvenate your body and soul", 
			"buttonText": "Learn more",
			"defaultBgImg": asset('images/feature-image.jpg'),
			'showBtn': true
		})|raw}}
	</div>
	
	<!-- Zone Content Start -->
    <div id="main-scroll" class="template__content">
        <div class="container">
            {{zone('main')|raw}}
        </div>
    </div>
	<!-- Zone Content End -->
	
</section>
<!-- Page Content End -->
{% endblock %}

{% block bodyscripts %}
<!-- Body Scripts Start -->
<script src="{{asset('js/smooth-scroll.js')}}"></script>
<!-- Body Scripts End -->
{% endblock %}